{
  "name": "kuglo",
  "version": "0.1.0",
  "description": "Practice for desktop app using Electron",
  "author": "kurone-kito",
  "license": "CC-BY-NC-4.0",
  "keywords": [
    "electron",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kurone-kito/kuglo.git"
  },
  "bugs": {
    "url": "https://github.com/kurone-kito/kuglo/issues"
  },
  "homepage": "https://github.com/kurone-kito/kuglo#readme",
  "main": "main.js",
  "scripts": {
    "install": "npm run build:content:dev",
    "start": "electron ./",
    "test": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "build:content:dev": "webpack --mode development",
    "build:content:prod": "webpack --mode production",
    "build:binary": "electron-builder --windows --linux",
    "build:binary:mac": "npm run build:binary -- --macos",
    "clean": "shx rm -rf coverage dist logs storybook-static",
    "production": "npm-run-all clean build:content:prod build:binary",
    "production:mac": "npm-run-all clean build:content:prod build:binary:mac",
    "test:unit": "jest --coverage",
    "storybook": "npm run storybook:static && start-storybook --ci --port 6006 --static-dir .storybook/public",
    "storybook:static": "shx cp -r .circleci .storybook/public/",
    "storybook:build": "npm run storybook:static && build-storybook --static-dir .storybook/public"
  },
  "engines": {
    "node": ">=8.10"
  },
  "dependencies": {
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@storybook/addons": "^5.0.0",
    "@storybook/react": "^5.0.0",
    "@types/babel__core": "^7.1.0",
    "@types/enzyme": "^3.1.18",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/eslint": "^4.16.6",
    "@types/jest": "^24.0.9",
    "@types/react": "^16.8.3",
    "@types/react-dom": "^16.8.2",
    "@types/storybook__react": "^4.0.1",
    "@types/styled-components": "^4.1.12",
    "@types/webpack": "^4.4.25",
    "@typescript-eslint/eslint-plugin": "^1.4.0",
    "babel-loader": "^8.0.5",
    "backstopjs": "^3.9.4",
    "coveralls": "^3.0.3",
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-import-resolver-webpack": "^0.11.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "progress-bar-webpack-plugin": "^1.12.1",
    "react-docgen-typescript-loader": "^3.0.1",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "shx": "^0.3.2",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.2",
    "tsconfig-paths-jest": "0.0.1",
    "typescript": "^3.3.3333",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3"
  },
  "husky": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{css,js,json,md,scss,ts,tsx,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
