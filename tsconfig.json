{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "paths": {
      "~t*": ["src/__tests__*"],
      "~*": ["src/ts*"]
    },
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["./src/**/*"]
}
